<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.appdev"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission 
        android:name="android.permission.INTERNET" />
    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission 
        android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission 
        android:name="android.permission.ACCESS_WIFI_STATE"/>
    
    <application
        android:name=".app.AppContext"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.AppStart"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:screenOrientation="portrait"> 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
          
        
        <activity 
            android:name=".view.About" 
            android:theme="@style/Theme.ZoomLight" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" 
            android:launchMode="singleTask"/>
        
        <activity 
            android:name=".view.Main" 
            android:theme="@style/Theme.NoTitleBar" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" 
            android:launchMode="singleTask"/>
        
		<activity android:name=".view.LoginDialog"
		     android:theme="@style/Theme.HalfTranslucent" 
		     android:screenOrientation="portrait" 
		     android:configChanges="keyboardHidden|orientation" 
		     android:launchMode="singleTask" 
		     android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

	
        <activity android:name=".view.ImageZoomDialog" 
            android:theme="@style/Theme.ZoomLight.Fullscreen" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation" 
            android:launchMode="singleTask"/>
		
        
		<activity android:name=".view.Setting" 
		    android:theme="@style/Theme.Preference" 
		    android:screenOrientation="portrait" 
		    android:configChanges="keyboardHidden|orientation" 
		    android:launchMode="singleTask"/>

        
        <activity
            android:name=".CustomVideoPlayer.VideoPlayer"
            android:configChanges="keyboardHidden|locale|orientation"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
 	
	
		<activity android:name="com.actionbarsherlock.app.SherlockActivity" />
    </application>

</manifest>