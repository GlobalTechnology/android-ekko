<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: maybe this isn't truly needed -->
    <style name="Base" />

    <!-- theme colors -->
    <color name="ekko_lightblue">#5DA5E3</color>
    <color name="ekko_mediumblue">#677EA0</color>
    <color name="ekko_darkblue">#2A5087</color>
    <color name="ekko_white">#FFFFFF</color>
    <color name="ekko_orange">#CF6D2C</color>
    <color name="ekko_grey">#E7E7E9</color>
    <color name="ekko_lightgrey">#F5F5F5</color>

    <style name="Theme.Ekko" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Ekko.ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="honeycomb">@style/Widget.Ekko.ActionBar</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Ekko.ActionButton.Overflow</item>
        <item name="android:actionOverflowButtonStyle" tools:targetApi="honeycomb">@style/Widget.Ekko.ActionButton.Overflow</item>
        <item name="progressBarStyle">@style/Widget.Ekko.ProgressBar</item>
        <item name="android:progressBarStyle">@style/Widget.Ekko.ProgressBar</item>
    </style>

    <!-- Theme-wide defaults -->
    <style name="Widget.Ekko.ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_ekko</item>
        <item name="android:progress">0</item>
        <item name="android:max">1</item>
    </style>

    <style name="TextAppearance.Ekko" parent="@android:style/TextAppearance">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="Widget.Ekko.ListView" parent="@android:style/Widget.ListView" />

    <!-- Navigation Drawer -->
    <style name="Widget.Ekko.NavigationDrawer" parent="@style/Widget.Ekko.ListView">
        <item name="android:divider">#D8D8D8</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="TextAppearance.Ekko.NavigationDrawer.Item" parent="TextAppearance.Ekko">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Ekko.NavigationDrawer.Course" parent="Widget.Ekko.NavigationDrawer">
        <item name="android:layout_width">320dp</item>
    </style>

    <style name="TextAppearance.Ekko.NavigationDrawer.Course.Item" parent="TextAppearance.Ekko.NavigationDrawer.Item"></style>

    <!-- Lesson design -->
    <style name="Widget.Ekko.Course.Lesson.Text" parent="Base">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/ekko_lightgrey</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Lesson.Text" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
