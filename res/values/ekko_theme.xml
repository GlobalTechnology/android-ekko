<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: maybe this isn't truly needed -->
    <style name="Base" />

    <!-- theme colors -->
    <color name="ekko_lightblue">#5DA5E3</color>
    <color name="ekko_mediumblue">#677EA0</color>
    <color name="ekko_darkblue">#2A5087</color>
    <color name="ekko_white">#FFFFFF</color>
    <color name="ekko_orange">#CF6D2C</color>
    <color name="ekko_grey">#E7E7E9</color>
    <color name="ekko_lightgrey">#F5F5F5</color>

    <style name="Theme.Ekko" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Ekko.ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="honeycomb">@style/Widget.Ekko.ActionBar</item>
        <item name="progressBarStyle">@style/Widget.Ekko.ProgressBar</item>
        <item name="android:progressBarStyle">@style/Widget.Ekko.ProgressBar</item>
    </style>

    <!-- Theme-wide defaults -->
    <style name="Widget.Ekko.ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_ekko</item>
        <item name="android:progress">0</item>
        <item name="android:max">1</item>
    </style>

    <style name="TextAppearance.Ekko" parent="@android:style/TextAppearance"></style>

    <!-- ActionBar design -->
    <style name="Widget.Ekko.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bg_ekko_actionbar</item>
        <item name="android:background">@drawable/bg_ekko_actionbar</item>
        <item name="titleTextStyle">@style/TextAppearance.Ekko.ActionBar.Title</item>
        <item name="android:titleTextStyle" tools:targetApi="honeycomb">@style/TextAppearance.Ekko.ActionBar.Title</item>
    </style>

    <dimen name="ekko_actionbar_border_bottom">2dp</dimen>

    <style name="TextAppearance.Ekko.ActionBar.Title" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/ekko_grey</item>
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="Widget.Ekko.NavigationDrawer" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/ekko_grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:background">@color/ekko_white</item>
    </style>

    <dimen name="ekko_navigationdrawer_item_start_padding">16dp</dimen>

    <style name="Base.TextAppearance.Ekko.NavigationDrawer.Item" parent="TextAppearance.Ekko">
        <item name="android:paddingLeft">@dimen/ekko_navigationdrawer_item_start_padding</item>
    </style>

    <style name="TextAppearance.Ekko.NavigationDrawer.Item" parent="Base.TextAppearance.Ekko.NavigationDrawer.Item">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Ekko.NavigationDrawer.Course" parent="Widget.Ekko.NavigationDrawer">
        <item name="android:layout_width">320dp</item>
    </style>

    <!-- InfoBar design -->
    <dimen name="ekko_infobar_border_bottom">2dp</dimen>

    <style name="Widget.Ekko.Course.InfoBar" parent="Base">
        <item name="android:background">@drawable/bg_ekko_infobar</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Widget.Ekko.Course.InfoBar.Button" parent="Base">
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.Ekko.Course.InfoBar.Button.Previous" parent="Widget.Ekko.Course.InfoBar.Button"></style>

    <style name="Widget.Ekko.Course.InfoBar.Button.Next" parent="Widget.Ekko.Course.InfoBar.Button"></style>

    <style name="TextAppearance.Ekko.InfoBar.Title" parent="TextAppearance.Ekko"></style>

    <!-- Lesson design -->
    <style name="Widget.Ekko.Course.Lesson.Text" parent="Base">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/ekko_lightgrey</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Lesson.Text" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Quiz design -->
    <style name="Widget.Ekko.Course.Quiz.Question" parent="Base"></style>

    <dimen name="ekko_widget_course_quiz_question_padding_start">32dp</dimen>
    <dimen name="ekko_widget_course_quiz_question_padding_end">32dp</dimen>

    <style name="Base.TextAppearance.Ekko.Course.Quiz.Question" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingLeft">@dimen/ekko_widget_course_quiz_question_padding_start</item>
        <item name="android:paddingRight">@dimen/ekko_widget_course_quiz_question_padding_end</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Quiz.Question" parent="Base.TextAppearance.Ekko.Course.Quiz.Question">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/ekko_orange</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <dimen name="ekko_widget_course_quiz_question_option_padding_start">48dp</dimen>
    <dimen name="ekko_widget_course_quiz_question_option_padding_end">48dp</dimen>

    <style name="Base.Widget.Ekko.Course.Quiz.Question.Options" parent="@android:style/Widget.ListView">
        <item name="android:paddingLeft">@dimen/ekko_widget_course_quiz_question_option_padding_start</item>
        <item name="android:paddingRight">@dimen/ekko_widget_course_quiz_question_option_padding_end</item>
    </style>

    <style name="Widget.Ekko.Course.Quiz.Question.Options" parent="Base.Widget.Ekko.Course.Quiz.Question.Options">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Base.TextAppearance.Ekko.Course.Quiz.Option" parent="@android:style/TextAppearance.Large">
        <item name="android:drawableLeft">@drawable/selector_ekko_quiz_question_option</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Quiz.Option" parent="Base.TextAppearance.Ekko.Course.Quiz.Option">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- miscellaneous -->

</resources>
