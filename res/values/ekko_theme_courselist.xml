<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Ekko.CourseList" parent="@style/Widget.Ekko.ListView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/ekko_grey</item>
        <item name="android:dividerHeight">24dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="Widget.Ekko.CourseList.Card" parent="Base">
        <item name="android:background">@color/ekko_white</item>
    </style>

    <style name="Widget.Ekko.CourseList.TitleLine" parent="Base">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Widget.Ekko.CourseList.Card.Shadow" parent="Base">
        <item name="android:background">@drawable/bg_ekko_course_card_shadow</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Widget.Ekko.CourseList.Card.ProgressBar" parent="Widget.Ekko.ProgressBar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="TextAppearance.Ekko.CourseList.Card.Title" parent="TextAppearance.Ekko">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
