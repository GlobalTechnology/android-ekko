<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Ekko.Course.InfoBar"
    android:layout_width="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/prevButton"
        style="@style/Widget.Ekko.Course.InfoBar.Button.Previous"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/access_prev_lesson"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_prev_lesson" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="top" >

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/nextButton"
        style="@style/Widget.Ekko.Course.InfoBar.Button.Next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/access_next_lesson"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_next_lesson" />

</LinearLayout>
