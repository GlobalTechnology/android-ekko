<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lessonListSideMenu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Dummy content. -->
    <LinearLayout android:id="@+id/mediathumb_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView android:id="@+id/mediaThumbnailTitle"
            style="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Media List"
            android:layout_marginBottom="16dp" />
    	
     
	    <GridView android:id="@+id/lessonMediaGridview"
		    android:layout_width="wrap_content" 
		    android:layout_height="match_parent"
		    android:columnWidth="150dp"
		    android:numColumns="3"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="5dp"
		   
		    android:gravity="center"
		/>


    </LinearLayout>
    
    <ProgressBar android:id="@+id/lesson_progressbar" 
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginRight="5dp" 
        android:layout_marginLeft="5dp" 
        android:progress="50" 
        android:max="100"
        android:progressDrawable="@drawable/greenprogress"/>
        
    <LinearLayout android:id="@+id/lessonList_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="16dp">
	     <TextView android:id="@+id/lessonTitle"
		     style="?android:textAppearanceLarge"
		     android:textStyle="bold"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="Lesson List"
		     android:layout_marginBottom="16dp" />
	    
	    <ListView 
	    android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingLeft="@dimen/list_padding"
	    android:paddingRight="@dimen/list_padding" />
	</LinearLayout>


</LinearLayout>