<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Ekko.Course.InfoBar"
    android:layout_width="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/prevButton"
        style="@style/Widget.Ekko.Course.InfoBar.Button.Previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/access_prev_lesson"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_prev_lesson"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.Ekko.Course.InfoBar.ProgressBar"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Ekko.InfoBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/progress"
            android:gravity="top" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/nextButton"
        style="@style/Widget.Ekko.Course.InfoBar.Button.Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/access_next_lesson"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_next_lesson"
        android:layout_gravity="center_vertical" />

</LinearLayout>
