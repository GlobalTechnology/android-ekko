<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Ekko.Course.Quiz.Top" parent="Base">
        <item name="android:background">@drawable/bg_ekko_quiz</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Quiz.Top" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/ekko_orange</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="Widget.Ekko.Course.Quiz.Question" parent="Widget.Ekko.Course.Quiz.Top"></style>

    <style name="TextAppearance.Ekko.Course.Quiz.Question" parent="TextAppearance.Ekko.Course.Quiz.Top"></style>

    <style name="Widget.Ekko.Course.Quiz.Question.Options" parent="@style/Widget.Ekko.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">48dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">48dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
    </style>

    <style name="Base.TextAppearance.Ekko.Course.Quiz.Option" parent="@android:style/TextAppearance.Large">
        <item name="android:drawableLeft">@drawable/selector_ekko_quiz_question_option</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Quiz.Option" parent="Base.TextAppearance.Ekko.Course.Quiz.Option">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Ekko.Course.Quiz.Results.Top" parent="Widget.Ekko.Course.Quiz.Top"></style>

    <style name="TextAppearance.Ekko.Course.Quiz.Results.Label" parent="TextAppearance.Ekko.Course.Quiz.Top">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">32dp</item>
    </style>

    <style name="TextAppearance.Ekko.Course.Quiz.Results.Score" parent="TextAppearance.Ekko.Course.Quiz.Top">
        <item name="android:textSize">48sp</item>
    </style>

</resources>
